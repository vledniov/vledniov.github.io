{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "jsRules": {},
    "rules": {
        "no-import-side-effect": [true, {"ignore-module": "(\\.html|\\.css)$"}],
        "jsdoc-format": [false],
        "no-unused-expression": false,
        "no-empty-interface": false,
        "no-namespace": [false],
        "interface-name": [false],
        "interface-over-type-literal": false,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "typedef": [true, "call-signature", "parameter"],
        "no-string-literal": false,
        "no-bitwise": false,
        "member-ordering": [true, {"order": "fields-first"}],
        "source-file-name": [true, "snakecase"],
        "capitalize-acronyms-and-abbreviations": true,
        "object-literal-sort-keys": false,
        "trailing-comma": [false],
        "max-one-statement-per-line": true,
        "todo-followed-by-name": true,
        "max-classes-per-file": [false],
        "ordered-imports": [false],
        "no-relative-imports": true,
        "arrow-parens": [false],
        "object-literal-key-quotes": [false],
        "semicolon": [false],
        "array-type": [false],
        "no-console": [true, "log"],
        "only-arrow-functions": [false],
        "cyclomatic-complexity": [true, 31],
        "no-var-keyword": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ]
    },
    "rulesDirectory": ["./linters/tslint/", "node_modules/tslint-microsoft-contrib/"]
}
